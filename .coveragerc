[html]
directory = .test-results/pytest/cov/
show_contexts = true
skip_covered = false

[paths]
source =
  src
  */src
  *\src
  */lib/python*/site-packages
  */pypy*/site-packages
  *\Lib\site-packages

[report]
exclude_lines =
    \#\s*pragma: no cover
    ^\s*raise AssertionError\b
    ^\s*raise NotImplementedError\b
    ^\s*return NotImplemented\b
    ^\s*raise$
    ^if __name__ == ['"]__main__['"]:$
skip_covered = true
skip_empty = true
show_missing = true

[run]
branch = true
cover_pylib = false
plugins = Cython.Coverage
relative_files = true
source =
  tests
source_pkgs =
  pylibsshext
